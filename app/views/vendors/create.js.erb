<% unless @vendor.errors.empty? %>
  $('#errors').html('<%= errors_for @vendor %>');
<% else %>
  $('#vendors').prepend("<%= escape_javascript(render @vendor) %>");
  $('#vendor_<%= @vendor.id %> .show').addClass('new')
  $('#new_vendor').replaceWith("<%= escape_javascript(render 'new', :vendor => @new_vendor) %>");
<% end %>
